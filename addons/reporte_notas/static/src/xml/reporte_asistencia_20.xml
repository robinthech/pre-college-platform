  <t t-name="reporte_notas.reporte_asistencia_alumno">
    <div class="text-center">
      <div class="alert alert-success p-1" role="alert">
        ASISTENCIA

      </div>
    </div>
    <table class="table table-bordered" style="table-layout: auto;">
      <tbody>
        <t t-foreach="matriz" t-as="filas">
