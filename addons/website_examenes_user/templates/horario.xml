      <div class="row">
        <div class="col-12">
          <div class="text-center">
            <div class="page-header">
              <h3>Bienvenido <t t-esc="usuario.name"/></h3>
            </div>
            <div class="alert alert-info" role="alert">
              INGRESA PUNTUALMENTE A TUS CLASES
            </div>
          </div>
        </div>
      </div>

      <div class=" schedule-template-elearning horario">
        <div class="cd-schedule loading">
          <div class="timeline">
            <ul>
              <li>
