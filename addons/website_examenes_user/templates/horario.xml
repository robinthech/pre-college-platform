<odoo>
  <template id="template_horario" name="Reuniones">
    <t t-call="website.layout">
      <div class="container evapro">
        <div class="row py-1">
          <div class="col-12">
            <div class="text-center">
              <div class="page-header">
                <h3>Bienvenido <t t-esc="usuario.name"/></h3>
              </div>
              <div class="alert alert-info" role="alert">
                INGRESA PUNTUALMENTE A TUS CLASES
              </div>
            </div>
            <div class="d-flex flex-row">
              <div class="m-10" style="margin: 5px">
                <a href="/horario" class="btn btn-primary" role="button">HORARIO</a>
              </div>
              <div class="m-10" style="margin: 5px">
                <a href="/reuniones" class="btn btn-primary" role="button">
                  REPROGRAMADAS</a>
              </div>

            </div>
            <div class="horario">

              <div class="schedule">

                <div class="schedule_header">
                  <span class="dl">Hora</span>
                  <span class="ds">H</span>
                </div>
                <!-- week-->
                <div class="schedule_header schedule-lunes">
                  <span class="dl">LUNES</span>
                  <span class="ds">L</span>
                </div>
                <div class="schedule_header schedule-martes">
                  <span class="dl">MARTES</span>
                  <span class="ds">M</span>
                </div>
                <div class="schedule_header schedule-miercoles">
                  <span class="dl">MIERCOLES</span>
                  <span class="ds">W</span>
                </div>
                <div class="schedule_header schedule-jueves">
                  <span class="dl">JUEVES</span>
                  <span class="ds">J</span>
                </div>
                <div class="schedule_header schedule-viernes">
                  <span class="dl">VIERNES</span>
                  <span class="ds">V</span>
                </div>
                <div class="schedule_header schedule-sabado">
                  <span class="dl">SABADO</span>
                  <span class="ds">S</span>
                </div>
                <div class="schedule_header schedule-domingo">
                  <span class="dl">DOMINGO</span>
                  <span class="ds">D</span>
                </div>

                <!-- Time-->
                <!-- Time-->
                <div class="schedule_time time-from-7">07:00</div>
                <div class="schedule_time time-from-8">08:00</div>
                <div class="schedule_time time-from-9">09:00</div>
                <div class="schedule_time time-from-10">10:00</div>
                <div class="schedule_time time-from-11">11:00</div>

                <div class="schedule_time time-from-12">12:00</div>
                <div class="schedule_time time-from-13">13:00</div>
                <div class="schedule_time time-from-14">14:00</div>
                <div class="schedule_time time-from-15">15:00</div>

                <div class="schedule_time time-from-16">16:00</div>
                <div class="schedule_time time-from-17">17:00</div>
                <div class="schedule_time time-from-18">18:00</div>
                <div class="schedule_time time-from-19">19:00</div>

                <div class="schedule_time time-from-20">20:00</div>
                <div class="schedule_time time-from-21">21:00</div>
                <div class="schedule_time time-from-22">22:00</div>
                <div class="schedule_time time-from-23">23:00</div>

                <!-- Grid Rows-->
                <div class="grid time-from-7 time-to-8 schedule-row-from-lunes schedule-row-to-domingo"></div>
                <div class="grid time-from-8 time-to-9 schedule-row-from-lunes schedule-row-to-domingo"></div>
                <div class="grid time-from-9 time-to-10 schedule-row-from-lunes schedule-row-to-domingo"></div>
                <div class="grid time-from-10 time-to-11 schedule-row-from-lunes schedule-row-to-domingo"></div>
                <div class="grid time-from-11 time-to-12 schedule-row-from-lunes schedule-row-to-domingo"></div>

                <div class="grid time-from-12 time-to-13 schedule-row-from-lunes schedule-row-to-domingo"></div>
                <div class="grid time-from-13 time-to-14 schedule-row-from-lunes schedule-row-to-domingo"></div>
                <div class="grid time-from-14 time-to-15 schedule-row-from-lunes schedule-row-to-domingo"></div>
                <div class="grid time-from-15 time-to-16 schedule-row-from-lunes schedule-row-to-domingo"></div>

                <div class="grid time-from-16 time-to-17 schedule-row-from-lunes schedule-row-to-domingo"></div>
                <div class="grid time-from-17 time-to-18 schedule-row-from-lunes schedule-row-to-domingo"></div>
                <div class="grid time-from-18 time-to-19 schedule-row-from-lunes schedule-row-to-domingo"></div>
                <div class="grid time-from-19 time-to-20 schedule-row-from-lunes schedule-row-to-domingo"></div>

                <div class="grid time-from-20 time-to-21 schedule-row-from-lunes schedule-row-to-domingo"></div>
                <div class="grid time-from-21 time-to-22 schedule-row-from-lunes schedule-row-to-domingo"></div>
                <div class="grid time-from-22 time-to-23 schedule-row-from-lunes schedule-row-to-domingo"></div>
                <div class="grid grid-last time-from-23 time-to-23 schedule-row-from-lunes schedule-row-to-domingo"></div>
                <!-- ./Grid Rows-->

                <div class="grid schedule-lunes time-from-7 time-to-23"></div>
                <div class="grid grid-last schedule-lunes time-from-23 time-to-23"></div>
                <div class="grid schedule-martes time-from-7 time-to-23"></div>
                <div class="grid grid-last schedule-martes time-from-23 time-to-23"></div>

                <div class="grid schedule-miercoles time-from-7 time-to-23"></div>
                <div class="grid grid-last schedule-miercoles time-from-23 time-to-23"></div>

                <div class="grid schedule-jueves time-from-7 time-to-23"></div>
                <div class="grid grid-last schedule-jueves time-from-23 time-to-23"></div>

                <div class="grid schedule-viernes time-from-7 time-to-23"></div>
                <div class="grid grid-last schedule-viernes time-from-23 time-to-23"></div>

                <div class="grid schedule-sabado time-from-7 time-to-23"></div>
                <div class="grid grid-last schedule-sabado time-from-23 time-to-23"></div>

                <div class="grid schedule-domingo time-from-7 time-to-23"></div>
                <div class="grid grid-last schedule-domingo time-from-23 time-to-23"></div>
              </div>
            </div>
          </div>
        </div>
      </div>

    </t>
  </template>

  <template id="template_aula_virtual" name="Aula Virtual">
